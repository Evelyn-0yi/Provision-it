if "%EXIST_2%"=="" (
  "%CREATEDB%" -U postgres -h "%DB_HOST%" -O %DB_USER% "%DB_NAME_TEST%"
  if errorlevel 1 (
    echo [ERROR] create %DB_NAME_TEST% failed
    exit /b 1
  )
  echo [OK] created %DB_NAME_TEST%.
) else (
  echo [OK] %DB_NAME_TEST% already exists.
)

echo [SUCCESS] Environment ready.
